<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="loginPage" prefHeight="600.0" prefWidth="1000.0" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.iut_ehealth.Controllers.LoginController">
   <children>
      <AnchorPane fx:id="loginBox" layoutX="524.0" layoutY="68.0" prefHeight="434.0" prefWidth="417.0" stylesheets="@../styles/styles.css">
         <children>
            <Button fx:id="loginButton" layoutX="143.0" layoutY="344.0" mnemonicParsing="false" onAction="#onLoginClick" prefHeight="26.0" prefWidth="149.0" text="Login" />
            <TextField fx:id="emailField" layoutX="144.0" layoutY="126.0" promptText="username/email" />
            <PasswordField fx:id="passwordField" layoutX="144.0" layoutY="192.0" promptText="password" />
            <Label layoutX="41.0" layoutY="36.0" prefHeight="34.0" prefWidth="80.0" text="Log In">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <HBox layoutX="106.0" layoutY="382.0">
               <children>
                  <Label prefHeight="24.0" prefWidth="124.0" text="Don't have an account?" />
                  <Hyperlink prefHeight="23.0" prefWidth="62.0" text="Sign Up " />
               </children>
            </HBox>
            <RadioButton fx:id="studentButton" layoutX="113.0" layoutY="265.0" mnemonicParsing="false" onAction="#onStudentButtonChosen" text="Student" />
            <RadioButton fx:id="teacherButton" layoutX="188.0" layoutY="265.0" mnemonicParsing="false" onAction="#onTeacherButtonChosen" text="Teacher" />
            <RadioButton fx:id="doctorButton" layoutX="262.0" layoutY="265.0" mnemonicParsing="false" onAction="#onDoctorButtonChosen" text="Doctor" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
